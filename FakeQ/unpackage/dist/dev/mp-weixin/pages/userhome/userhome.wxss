/* 背景层 */
.bg {
  z-index: -2;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg .bg-bai {
  width: 100%;
  height: 100%;
}
.bg .bg-img {
  z-index: -1;
  width: 110%;
  height: 110%;
  top: -10rpx;
  left: -10rpx;
  -webkit-filter: blur(16px);
          filter: blur(16px);
  opacity: 0.6;
}
.bg .bind-bg-img {
  z-index: 100;
  opacity: 0;
