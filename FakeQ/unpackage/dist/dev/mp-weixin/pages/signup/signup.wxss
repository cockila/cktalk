/* 主体 */
.main {
  padding: 54rpx 60rpx 120rpx;
}
.main .title {
  text-align: center;
  font-size: 44rpx;
  color: #272832;
  line-height: 56rpx;
}
.main .slogan {
  text-align: center;
  font-size: 40rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 56rpx;
}
.main .slogan ._span {
  font-size: 50rpx;
  color: #ffe431;
}
.main .inputs {
  padding-top: 48rpx;
}
.main .inputs input {
  padding-top: 40rpx;
  height: 88rpx;
  font-size: 32rpx;
  fonf-weight: 500;
  color: #272832;
  line-height: 88rpx;
  border-bottom: 1rpx solid rgba(39, 20, 50, 0.1);
}
.main .inputs-div {
  position: relative;
}
.main .employ, .main .invalid {
  position: absolute;
  top: 40rpx;
  right: 0;
  font-size: 28rpx;
  fonf-weight: 500;
  color: #ff5d5b;
  line-height: 88rpx;
}
.main .ok {
  position: absolute;
  right: 0;
  top: 70rpx;
  width: 42rpx;
  height: 32rpx;
  color: #5799ff;
}
.submit {
  margin: 0 auto;
  width: 85%;
  height: 96rpx;
  background: #ffe431;
  box-shadow: 0px 5rpx 32rpx -36rpx rgba(255, 220, 49, 0.4);
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #272832;
  line-height: 96rpx;
  text-align: center;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
}
.submit1 {
  margin: 0 auto;
  width: 85%;
  height: 96rpx;
  background: rgba(39, 40, 50, 0.2);
  box-shadow: 0px 5rpx 32rpx -36rpx rgba(255, 220, 49, 0.4);
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 96rpx;
  text-align: center;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
