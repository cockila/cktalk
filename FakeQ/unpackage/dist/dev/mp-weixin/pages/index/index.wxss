/* 公共样式 */
.contents {
  padding-top: 25px;
}
/* 顶部 */
.top-bar {
  z-index: 100;
  width: 92%;
  height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.96);
  border-bottom: 1rpx solid rgba(39, 20, 50, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 25px;
  box-shadow: 1rpx 1rpx 20rpx 2rpx rgba(117, 112, 117, 0.2);
}
.top-bar .top-bar-left {
  float: left;
}
.top-bar .top-bar-left image {
  width: 68rpx;
  height: 68rpx;
  margin-top: 10rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-center {
  float: left;
}
.top-bar .top-bar-center .logo {
  display: inline-block;
  padding-top: 18rpx;
  font-size: 24px;
  color: #ffe431;
}
.top-bar .top-bar-center .title {
  line-height: 88rpx;
}
.top-bar .top-bar-right {
  float: right;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
  border-radius: 40rpx;
}
.top-bar .top-bar-right .search {
  display: inline-block;
  width: 70rpx;
  height: 78rpx;
  padding-left: 12rpx;
}
.top-bar .top-bar-right .add {
  width: 78rpx;
  height: 78rpx;
  display: inline-block;
}
.top-bar .top-bar-right ._i {
  width: 52rpx;
  height: 52rpx;
  display: inline-block;
  font-size: 19px;
  padding: 24rpx 5rpx 5rpx 15rpx;
}
/* 底部 */
.bottom {
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  padding: 12rpx 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}
.bottom .bottom-btn {
  height: 80rpx;
  margin: 0 auto;
  background: #ffe431;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
}
.btn1 {
  height: 80rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
}
.top-bar {
  background: #ffe431;
}
.top-bar .top-bar-right {
  margin-top: 4rpx;
}
/* 搜索框 */
.search-box {
  width: 90%;
  height: 42rpx;
  padding-top: 104rpx;
  padding-bottom: 16rpx;
  margin: 0 auto;
}
.search-box input {
  padding: 6rpx 0;
  text-align: center;
  border-radius: 20rpx;
  background-color: #f3f4f6;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
}
/* 好友列表 */
.main {
  width: 100%;
  padding-top: 8rpx;
}
.main .refresh {
  text-align: center;
  padding-top: 20rpx;
}
.main .refresh ._i {
  font-size: 32rpx;
  color: rgba(39, 40, 50, 0.8);
}
.main .refresh .refresh-title {
  padding-top: 10rpx;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 40rpx;
}
.main .apply .friend-list,
.main .friends .friend-list {
  height: 96rpx;
  padding: 16rpx 32rpx;
}
.main .apply .friend-list:active,
.main .friends .friend-list:active {
  background-color: #f3f4f6;
}
.main .apply .friend-list .friend-list-l,
.main .friends .friend-list .friend-list-l {
  position: relative;
  float: left;
}
.main .apply .friend-list .friend-list-l ._i,
.main .friends .friend-list .friend-list-l ._i {
  font-size: 33px;
  border: 1rpx solid rgba(39, 20, 50, 0.1);
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background-color: #ffe431;
  color: rgba(39, 40, 50, 0.6);
  border-radius: 20rpx;
}
.main .apply .friend-list .friend-list-l image,
.main .friends .friend-list .friend-list-l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
}
.main .apply .friend-list .friend-list-l .tip,
.main .friends .friend-list .friend-list-l .tip {
  z-index: 10;
  position: absolute;
  top: -6rpx;
  left: 68rpx;
  padding: 0 6rpx;
  min-width: 22rpx;
  height: 36rpx;
  background: #ff5d5b;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
}
.main .apply .friend-list .friend-list-r,
.main .friends .friend-list .friend-list-r {
  padding-left: 120rpx;
}
.main .apply .friend-list .friend-list-r .top,
.main .friends .friend-list .friend-list-r .top {
  height: 50rpx;
}
.main .apply .friend-list .friend-list-r .top .name,
.main .friends .friend-list .friend-list-r .top .name {
  float: left;
  font-size: 36rpx;
  font-weight: 400;
  color: #272832;
  line-height: 50rpx;
}
.main .apply .friend-list .friend-list-r .top .time,
.main .friends .friend-list .friend-list-r .top .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 50rpx;
}
.main .apply .friend-list .friend-list-r .news,
.main .friends .friend-list .friend-list-r .news {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

