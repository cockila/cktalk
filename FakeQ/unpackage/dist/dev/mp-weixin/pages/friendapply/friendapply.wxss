}
/* main */
.main {
  padding: 108rpx 32rpx;
}
.main .requester {
  background: white;
  box-shadow: 0px 24rpx 64rpx -8rpx rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  margin-top: 112rpx;
  padding: 32rpx;
}
.main .requester .request-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.main .requester .request-top .btn {
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  width: 100rpx;
  height: 64rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 32rpx;
  font-weight: 400;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
}
.main .requester .request-top .reject {
  color: #ff5d5b;
  background: rgba(255, 93, 91, 0.1);
}
.main .requester .request-top .agree {
  background: #ffe431;
}
.main .requester .request-top .head-img {
  margin-top: -102rpx;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  text-align: center;
}
.main .requester .request-top .head-img image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  box-shadow: 8rpx 10rpx 25rpx -5rpx rgba(117, 112, 117, 0.3);
}
.main .requester .request-center {
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}
.main .requester .request-center .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #272832;
  line-height: 50rpx;
}
.main .requester .request-center .time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 34rpx;
}
.main .requester .notic {
  padding: 20rpx 32rpx;
  background-color: #f3f4f6;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
}

