/* 顶部 */
.top-bar {
  z-index: 100;
  width: 92%;
  height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.96);
  border-bottom: 1rpx solid rgba(39, 20, 50, 0.1);
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 25px;
  box-shadow: 1rpx 1rpx 20rpx 2rpx rgba(117, 112, 117, 0.2);
}
.top-bar .top-bar-left {
  float: left;
}
.top-bar .top-bar-left image {
  width: 68rpx;
  height: 68rpx;
  margin-top: 10rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-center {
  float: left;
}
.top-bar .top-bar-center .logo {
  display: inline-block;
  padding-top: 18rpx;
  font-size: 24px;
